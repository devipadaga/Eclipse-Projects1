	public static void countElementOccurance(String s)
	{
		
        char c = 'g';
 
        System.out.println(Collections.frequency(Arrays.asList(s.split("")),String.valueOf(c)));
	}
	
	public static int countDigits(int n)
	{
		String num=String.valueOf(n);
		return num.length();
	}
	
