package interview_Ques_shared;

public class Strings {
	
	static void string1()
	{
		String s="temp123";
		
		//print only ---temp word
		s=s.replaceAll("[^a-zA-Z]+", "");
		System.out.println(s);
		
		System.out.println("Another way--using StringBuffer:");
		StringBuffer sb=new StringBuffer();
		
		
		for(int i=0;i<s.length();i++)
		{
		if(Character.isLetter(s.charAt(i)))
		{
			sb.append(s.charAt(i));
		}
		}
		System.out.println(sb.toString());
	}
	
	
	static void string2()
	{
		String s="ArunKumar";
		String s3=s.substring(0, 4);
		String s1=s.substring(s.indexOf("Kumar"));
		String s2=s.substring(s.indexOf('K'));
		System.out.println(s2);
		System.out.println(s3+",\n"+"s1 ="+s1+",\n"+"s2 ="+s2);
		
	}
	
	static void removwWhiteSpaces()
	{
		String s=" we l com e";
		System.out.println(s.replaceAll(" ", ""));
	}

	public static void main(String[] args) {
		
		//string1();
		string2();
		//removwWhiteSpaces();
	}

}
