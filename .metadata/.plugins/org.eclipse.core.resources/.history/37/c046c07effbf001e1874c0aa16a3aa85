	public static int GreatestNum(int a,int b,int c)
	{
		int temp=(a>b?a:b);
		int largest=(temp>c?temp:c);

		return largest;


	}

	public static void CorrecttheOrder(String[] arr)
	{
		//2. String[] arr = {“srikar”, “jayesh”,”kavita”, “Hyderabad”, “Tirumala”, “Banglore”,”Hyderabad”, “debrati”,”ankita”,”jayesh”, “pune”,”GRhombus Technologies”,”Noida”,”kavita”,”Telangana”, “Delhi”,”Karnataka”,”Maharashtra”, “India”}

		//		Map<String[],Integer> hm=new HashMap<String[],Integer>();
		//		
		//		hm.put(arr, hm.put(hm.get(hm), null))
		//		

		Map<String,Integer> map=new HashMap<>();
		for (int i = 0; i < arr.length; i++) {	
			map.put(arr[i], map.getOrDefault(arr[i], 0)+1);
		}

		for(Entry<String,Integer> entry:map.entrySet())
		{
			if(entry.getKey().length()>=6 && entry.getValue()==1) {
				System.out.println(entry.getKey()+"-"+entry.getValue());
			}

			//			else if(entry.getKey().length()>7 && entry.getValue()>1) {
			//				System.out.println(entry.getKey()+"-"+entry.getValue());
			//			}


		}

	}

	// dont use methods in string builder
	public static void revStringUsingStringBuilder(String s)
	{
		String[] str=s.split("");
			for(int j=str.length-1;j>=0;j--)
			{
				s+=s.charAt(j);
			}
			//System.out.println(s);
			StringBuilder sb=new StringBuilder(s);
			System.out.println(sb.toString());

		}
	
}
