import java.util.Collections;

public class Date_8_02_2024 {

	public static void main(String[] args) {
		
		String s="Java is java again java again";
	//	countElementOccurance(s);
		
		int n=342;
	//	System.out.println(countDigits(n));
		
		String str="I Am Not String";
		revStringByPreservingSpaces(str);
	}
	
	public static void countElementOccurance(String s)
	{
		
        char c = 'g';
 
        System.out.println(Collections.frequency(Arrays.asList(s.split("")),String.valueOf(c)));
	}
	
	public static int countDigits(int n)
	{
		String num=String.valueOf(n);
		return num.length();
	}
	
	public static void revStringByPreservingSpaces(String s)
	{
		//String s="I Am Not String"
	    //output:g ni rtS toNmAI

		String[] sarr=s.split(" ");
		StringBuilder sb=new StringBuilder(s);
		sb.reverse();
	      for(int i=0 ; i<s.length(); i++){
	      if(s.charAt(i)== ' '){
	         sb.insert(i, " ");
	      }
	   }
	   sb.append("");
	   System.out.println(sb);
		
	}
	

}
