package aSSIGNMENTS;

import java.util.*;

public class Jayeshassign {

	public static void main(String[] args) {

		String str="My name is Jayesh and I am working as an automation engineer";

		List<String> myList = new ArrayList<String>(Arrays.asList(str.split(" ")));
		List<String> tempList=new ArrayList<String>();
		List<String> SingleList=new ArrayList<String>();

		for(int i=0;i<myList.size();i++)				
			{
				String word=myList.get(i);
				int length=word.length();
				
				if(length>2)
				{
					tempList.add(myList.get(i));
				}
				
				else if(length<=1)
				{
					SingleList.add(myList.get(i));
				}
			}

			
			System.out.println(tempList);
			System.out.println(SingleList);
		}

	}


