			if(Character.isLetter(s.charAt(i)))
			{

				temp+=s.charAt(i);
			}	

			
			else if(i<s.length()-1 && Character.isDigit(s.charAt(i)) || Character.isLetter(s.charAt(i+1)))
			{
				temp2+=s.charAt(i);
					
				
			}
			
			
				r+=new StringBuilder(temp).reverse();
				rev=r+temp2;
				System.out.println(rev);
			
			
			
		}	
	

}

